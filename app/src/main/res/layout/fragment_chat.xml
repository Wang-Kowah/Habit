<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="156px">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/fragmentBack">

        <RelativeLayout
            android:id="@+id/dateButton"
            android:layout_width="240px"
            android:layout_height="156px"
            android:layout_gravity="bottom|start"
            android:background="@color/fragmentBack">

            <LinearLayout
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="41px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="周"
                    android:textColor="@color/colorText"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="六"
                    android:textColor="@color/colorText"
                    android:textSize="30px" />

            </LinearLayout>

            <TextView
                android:id="@+id/timeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="80px"
                android:gravity="center"
                android:text="22:30"
                android:textColor="@color/colorText"
                android:textSize="55px" />
        </RelativeLayout>

        <EditText
            android:id="@+id/input_node"
            android:layout_width="777px"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35px"
            android:layout_marginStart="24px"
            android:background="@drawable/round_edittext"
            android:gravity="start|top"
            android:hint="  建议使用语音输入法，打字快"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLines="5"
            android:paddingHorizontal="10px"
            android:paddingVertical="10px" />
    </LinearLayout>

</RelativeLayout>