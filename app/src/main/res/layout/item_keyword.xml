<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/keywordCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/keywordDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="昨天"
                android:textColor="@color/colorTime"
                android:textSize="14sp" />

            <View
                android:layout_width="140dp"
                android:layout_height="1px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorTime" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="你提到最多的关键词"
                android:textColor="@color/colorTime"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/keywordTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="奋斗"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="关键词"
                android:textColor="@color/colorTime"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/keywordAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:maxWidth="300dp"
                android:text="奋斗 改革开放 务实 努力 机会"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/fragmentBack" />
    </android.support.v7.widget.CardView>

</LinearLayout>
